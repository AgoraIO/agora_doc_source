<reference id="api_getscreensinfo">
    <title><ph keyref="getScreensInfo"/></title>
    <shortdesc id="short"><ph id="shortdesc">Gets the screen information.</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="getScreensInfo" />
            </keywords>
        </metadata>
    </prolog>
    <refbody>
        <section id="prototype">
            <p outputclass="codeblock">
        <codeblock props="android" outputclass="language-java"></codeblock>
        <codeblock props="ios mac" outputclass="language-objectivec"></codeblock>
        <codeblock props="windows" outputclass="language-cpp"></codeblock>
        <codeblock props="electron" outputclass="language-typescript">getScreensInfo(): Array&lt;Object></codeblock>
        <codeblock props="unity" outputclass="language-csharp"></codeblock>
