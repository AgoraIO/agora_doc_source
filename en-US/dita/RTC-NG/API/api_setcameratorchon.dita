    <shortdesc id="short"><ph id="shortdesc">Enables the camera flash.</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="setCameraTorchOn"/>
            </keywords>
        </metadata>
    </prolog>
    <refbody>
