<reference id="enum_audiofilerecordingtype">
    <title><ph keyref="AUDIO_FILE_RECORDING_TYPE"/></title>
    <shortdesc id="short"><ph id="shortdesc">Recording content. Set in <xref keyref="startAudioRecording3"/>.</ph></shortdesc>
    <refbody>
        <section id="parameters">
            <title>Enumerator</title>
            <parml>
            <plentry>
                <pt><ph keyref="AUDIO_FILE_RECORDING_MIC"/></pt>
                <pd>1: Only records the audio of the local user.</pd>
            </plentry>
            <plentry>
                <pt><ph keyref="AUDIO_FILE_RECORDING_PLAYBACK"/></pt>
                <pd>2: Only records the audio of all remote users.</pd>
            </plentry>
            <plentry>
                <pt><ph keyref="AUDIO_FILE_RECORDING_MIXED"/></pt>
                <pd>3: Records the mixed audio of the local and all remote users.</pd>
            </plentry>
            </parml> </section>
    </refbody>
