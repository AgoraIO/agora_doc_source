            <codeblock props="cpp unreal" outputclass="language-cpp">struct WatermarkTimestamp {
  int fontSize;
  const char* fontFilePath;
  int strokeWidth;
  const char* format;
  WatermarkTimestamp() : fontSize(10), fontFilePath(NULL), strokeWidth(1), format(NULL) {}
};</codeblock>
