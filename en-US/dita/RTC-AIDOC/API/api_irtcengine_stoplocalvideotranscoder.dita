<reference id="api_irtcengine_stoplocalvideotranscoder">
    <title><ph keyref="stopLocalVideoTranscoder"/></title>
    <shortdesc id="short"><ph id="shortdesc" props="cpp">Stops local video mixing.</ph><ph id="shortdesc" props="android">Stops local composition.</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="stopLocalVideoTranscoder"/>
            </keywords>
        </metadata>
    </prolog>
    <refbody>
        <section id="prototype">
            <p outputclass="codeblock">
                <codeblock props="cpp" outputclass="language-cpp">virtual int stopLocalVideoTranscoder() = 0;</codeblock>
                <codeblock props="android" outputclass="language-java">public abstract int stopLocalVideoTranscoder();</codeblock>
            </p>
        </section>
        <section id="detailed_desc" deliveryTarget="details" otherprops="no-title">
            <p props="cpp">After calling <xref keyref="startLocalVideoTranscoder"/>, if you want to stop local video mixing, you can call this method.</p>
            <p props="android">After calling <xref keyref="startLocalVideoTranscoder"/>, you can call this method to stop local composition.</p>
        </section>
        <section id="return_values" props="android cpp">
            <title>Return Values</title>
            <p props="cpp">
                <ul>
                    <li>0: Success.</li>
                    <li>&lt; 0: Failure.</li>
                </ul>
            </p>
            <p props="android">
                <ul>
                    <li>0: Success.</li>
                    <li>&lt; 0: Failure.</li>
                </ul>
            </p>
        </section>
    </refbody>
