<reference id="enum_mediadevicestatetype">
    <title><ph keyref="MEDIA_DEVICE_STATE_TYPE"/></title>
    <shortdesc id="short"><ph id="shortdesc" props="cpp">Media device states.</ph></shortdesc>
    <refbody>
        <section id="parameters" deliveryTarget="details" props="cpp">
            <title>Enumerations</title>
            <parml>
                <plentry props="cpp">
                    <pt>MEDIA_DEVICE_STATE_IDLE</pt>
                    <pd>(0): Device is idle and available.</pd>
                </plentry>
                <plentry props="cpp">
                    <pt>MEDIA_DEVICE_STATE_ACTIVE</pt>
                    <pd>(1): Device is in use.</pd>
                </plentry>
                <plentry props="cpp">
                    <pt>MEDIA_DEVICE_STATE_DISABLED</pt>
                    <pd>(2): Device is disabled and unavailable.</pd>
                </plentry>
                <plentry props="cpp">
                    <pt>MEDIA_DEVICE_STATE_PLUGGED_IN</pt>
                    <pd>(3): Device is connected.</pd>
                </plentry>
                <plentry props="cpp">
                    <pt>MEDIA_DEVICE_STATE_NOT_PRESENT</pt>
                    <pd>(4): Device is not detected.</pd>
                </plentry>
                <plentry props="cpp">
                    <pt>MEDIA_DEVICE_STATE_UNPLUGGED</pt>
                    <pd>(8): Device is disconnected.</pd>
                </plentry>
            </parml>
        </section>
    </refbody>
</reference>