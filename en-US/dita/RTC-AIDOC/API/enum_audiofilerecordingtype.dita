<reference id="enum_audiofilerecordingtype">
    <title><ph keyref="AUDIO_FILE_RECORDING_TYPE"/></title>
    <shortdesc id="short"><ph id="shortdesc" props="cpp">Type of recorded content.</ph></shortdesc>
    <refbody>
        <section id="detailed_desc" deliveryTarget="details" otherprops="no-title" props="cpp">
            <p props="cpp">Set in <codeph>startAudioRecording</codeph>.</p>
        </section>
        <section id="parameters" deliveryTarget="details" props="cpp">
            <title>Enumerations</title>
            <parml>
                <plentry props="cpp">
                    <pt>AUDIO_FILE_RECORDING_MIC</pt>
                    <pd>(1): Record only local user audio.</pd>
                </plentry>
                <plentry props="cpp">
                    <pt>AUDIO_FILE_RECORDING_PLAYBACK</pt>
                    <pd>(2): Record only audio from all remote users.</pd>
                </plentry>
                <plentry props="cpp">
                    <pt>AUDIO_FILE_RECORDING_MIXED</pt>
                    <pd>(3): Record mixed audio of local and all remote users.</pd>
                </plentry>
            </parml>
        </section>
    </refbody>
</reference>