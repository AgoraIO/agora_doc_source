<reference id="api_imediaplayer_getduration">
    <title><ph keyref="getDuration"/></title>
    <shortdesc id="short"><ph id="shortdesc" props="cpp">Gets the duration of the media resource.</ph><ph id="shortdesc" props="android">Gets the duration of the media resource.</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="getDuration"/>
            </keywords>
        </metadata>
    </prolog>
    <refbody>
        <section id="prototype">
            <p outputclass="codeblock">
                <codeblock props="cpp" outputclass="language-cpp">virtual int getDuration(int64_t&amp; duration) = 0;</codeblock>
                <codeblock props="android" outputclass="language-java">long getDuration();</codeblock>
            </p>
        </section>
        <section id="detailed_desc" deliveryTarget="details" otherprops="no-title"/>
        <section id="parameters" deliveryTarget="details" props="cpp">
            <title>Parameters</title>
            <parml>
                <plentry props="cpp">
                    <pt>duration</pt>
                    <pd>Output parameter, the total duration of the media file (in milliseconds).</pd>
                </plentry>
            </parml>
        </section>
        <section id="return_values" props="android cpp">
            <title>Return Values</title>
            <p props="cpp">
                <ul>
                    <li>0: Success.</li>
                    <li>&lt; 0: Failure.</li>
                </ul>
            </p>
            <p props="android">
                <ul>
                    <li>If the method call succeeds, returns the total duration of the media file (milliseconds).</li>
                    <li>If the method call fails, returns a value less than 0.</li>
                </ul>
            </p>
        </section>
    </refbody>
