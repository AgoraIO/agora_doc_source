<reference id="api_imediaplayercachemanager_setmaxcachefilesize">
    <title><ph keyref="setMaxCacheFileSize"/></title>
    <shortdesc id="short"><ph id="shortdesc" props="cpp">Sets the maximum total storage size for cached media files.</ph><ph id="shortdesc" props="android">Sets the maximum total storage size for cached media files.</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="setMaxCacheFileSize"/>
            </keywords>
        </metadata>
    </prolog>
    <refbody>
        <section id="prototype">
            <p outputclass="codeblock">
                <codeblock props="cpp" outputclass="language-cpp">virtual int setMaxCacheFileSize(int64_t cacheSize) = 0;</codeblock>
                <codeblock props="android" outputclass="language-java">int setMaxCacheFileSize(long cacheSize);</codeblock>
            </p>
        </section>
        <section id="detailed_desc" deliveryTarget="details" otherprops="no-title"/>
        <section id="parameters" deliveryTarget="details" props="android cpp">
            <title>Parameters</title>
            <parml>
                <plentry props="cpp">
                    <pt>cacheSize</pt>
                    <pd>The maximum total storage size (in bytes) for cached media files. Default is 1 GB.</pd>
                </plentry>
                <plentry props="android">
                    <pt>cacheSize</pt>
                    <pd>The maximum total storage size for cached media files, in bytes. (Default is 1 GB.)</pd>
                </plentry>
            </parml>
        </section>
        <section id="return_values" props="android cpp">
            <title>Return Values</title>
            <p props="cpp">
                <ul>
                    <li>0: Success.</li>
                    <li>&lt; 0: Failure. See <xref keyref="MEDIA_PLAYER_REASON"/>.</li>
                </ul>
            </p>
            <p props="android">
                <ul>
                    <li>0: Success.</li>
                    <li>&lt; 0: Failure. See <xref keyref="MEDIA_PLAYER_REASON"/>.</li>
                </ul>
            </p>
        </section>
    </refbody>
