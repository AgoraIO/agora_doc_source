<reference id="api_irtcengine_stoprecordingdevicetest">
    <title><ph keyref="stopRecordingDeviceTest"/></title>
    <shortdesc id="short"><ph id="shortdesc" props="android">Stops the audio recording device test.</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="stopRecordingDeviceTest"/>
            </keywords>
        </metadata>
    </prolog>
    <refbody>
        <section id="prototype">
            <p outputclass="codeblock">
                <codeblock props="android" outputclass="language-java">public abstract int stopRecordingDeviceTest();</codeblock>
            </p>
        </section>
        <section id="detailed_desc" deliveryTarget="details" otherprops="no-title">
            <p props="android">You must call this method after calling <xref keyref="startRecordingDeviceTest"/> to stop the audio recording device test.</p>
            <note props="android">Call this method before joining a channel.</note>
        </section>
        <section id="return_values" props="android">
            <title>Return Values</title>
            <p props="android">
                <ul>
                    <li>0: Success.</li>
                    <li>&lt; 0: Failure.</li>
                </ul>
            </p>
        </section>
    </refbody>
</reference>