            <plentry conkeyref="onJoinChannelSuccess/engine" props="ios mac">
                <pt/>
                <pd/>
            </plentry>
            <plentry id="uid">
                <pt props="cpp unity">userId</pt>
                <pt props="android electron flutter">uid</pt>
                <pt props="ios mac">speakerUid</pt>
                <pd>远端最活跃用户的 ID。</pd>
            </plentry>
            </parml> </section>
    </refbody>
