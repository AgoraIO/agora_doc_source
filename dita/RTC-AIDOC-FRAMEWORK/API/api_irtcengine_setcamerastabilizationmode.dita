                <codeblock props="rn" outputclass="language-typescript">abstract setCameraStabilizationMode(mode: CameraStabilizationMode): number;</codeblock>
                <codeblock props="flutter" outputclass="language-dart">Future&lt;void&gt; setCameraStabilizationMode(CameraStabilizationMode mode);</codeblock>
                <codeblock props="unity" outputclass="language-csharp">public abstract int SetCameraStabilizationMode(CAMERA_STABILIZATION_MODE mode);</codeblock>
