<reference id="api_imediaplayer_setplayeroption2">
    <title><ph keyref="setPlayerOption2"/></title>
    <shortdesc id="short"><ph id="shortdesc">设置媒体播放器的参数选项。</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="setPlayerOption2"/>
