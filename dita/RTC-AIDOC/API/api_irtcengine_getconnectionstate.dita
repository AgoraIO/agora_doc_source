        <metadata>
            <keywords>
                <indexterm keyref="getConnectionState"/>
            </keywords>
        </metadata>
    </prolog>
    <refbody>
        <section id="prototype">
            <p outputclass="codeblock">
                <codeblock props="cpp" outputclass="language-cpp">virtual CONNECTION_STATE_TYPE getConnectionState() = 0;</codeblock>
                <codeblock props="android" outputclass="language-java">public abstract int getConnectionState();</codeblock>
                <codeblock props="ios" outputclass="language-objectivec">- (AgoraConnectionState)getConnectionState NS_SWIFT_NAME(getConnectionState());</codeblock>
                <codeblock props="mac" outputclass="language-objectivec">- (AgoraConnectionState)getConnectionState NS_SWIFT_NAME(getConnectionState());</codeblock>
            </p>
        </section>
        <section id="timing" deliveryTarget="details">
