<reference id="api_irtcengine_stopscreencapture">
    <title><ph keyref="stopScreenCapture"/></title>
    <shortdesc id="short"><ph id="shortdesc" props="cpp">停止屏幕采集。</ph><ph id="shortdesc" props="ios">停止屏幕采集。</ph><ph id="shortdesc" props="android">停止屏幕采集。</ph><ph id="shortdesc" props="mac">停止屏幕采集。</ph></shortdesc>
    <prolog>
        <metadata>
            <keywords>
                <indexterm keyref="stopScreenCapture"/>
