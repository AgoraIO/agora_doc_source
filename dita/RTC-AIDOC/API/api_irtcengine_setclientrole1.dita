    <shortdesc id="short"><ph id="shortdesc" props="cpp">设置用户角色。</ph><ph id="shortdesc" props="ios">设置用户角色。</ph><ph id="shortdesc" props="android">设置客户端实例的用户角色。</ph><ph id="shortdesc" props="mac">设置用户角色。</ph></shortdesc>
