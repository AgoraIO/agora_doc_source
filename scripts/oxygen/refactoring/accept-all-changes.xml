        </parameter>
        <parameter type="BOOLEAN" name="remove.oxygen.comments" label="${i18n(Remove_comments_label)}">
            <description>${i18n(Remove_comments_description)}</description>
            <possibleValues>
                <value name="true" default="true">true</value>
                <value name="false">false</value>
            </possibleValues>
        </parameter>
        <parameter type="BOOLEAN" name="remove.oxygen.highlights" label="${i18n(Review_remove_highlights)}">
            <description>${i18n(Remove_highlights_description)}</description>
            <possibleValues>
                <value name="true" default="true">true</value>
                <value name="false">false</value>
            </possibleValues>
        </parameter>
