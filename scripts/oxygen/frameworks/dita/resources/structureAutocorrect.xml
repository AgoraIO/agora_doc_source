<structure-autocorrect>
  <!-- Unordered lists -->
  <prefix-replacement prefix="-">
    <ul><li></li></ul>
  </prefix-replacement>
  <prefix-replacement prefix="*">
    <ul><li></li></ul>
  </prefix-replacement>
  <prefix-replacement prefix="+">
    <ul><li></li></ul>
  </prefix-replacement>

  <!-- Ordered lists -->
  <prefix-replacement prefix="1.">
    <fragment>
      <ol><li></li></ol>
    </fragment>
  </prefix-replacement>
  
  <!-- Code block shortcut -->
  <prefix-replacement prefix="```">
    <codeblock/>
  </prefix-replacement>
  <prefix-replacement prefix="```java">
    <codeblock outputclass="language-java"/>
  </prefix-replacement>
  <prefix-replacement prefix="```js">
    <codeblock outputclass="language-javascript"/>
  </prefix-replacement>
  <prefix-replacement prefix="```xml">
    <codeblock outputclass="language-xml"/>
  </prefix-replacement>
  <prefix-replacement prefix="```css">
    <codeblock outputclass="language-css"/>
  </prefix-replacement>
  <prefix-replacement prefix="```py">
    <codeblock outputclass="language-python"/>
  </prefix-replacement>
  <prefix-replacement prefix="```bash">
    <codeblock outputclass="language-bourne"/>
  </prefix-replacement>
  <prefix-replacement prefix="```json">
    <codeblock outputclass="language-json"/>
  </prefix-replacement>
  
  <!-- Note shortcut -->
  <prefix-replacement prefix="Note:">
    <note/>
  </prefix-replacement>
  <prefix-replacement prefix="Warning:">
    <note type="warning"/>
  </prefix-replacement>
    <prefix-replacement prefix="Important:">
    <note type="important"/>
  </prefix-replacement>
</structure-autocorrect>