      <define name="task-info-types">
        <ref name="task.element"/>
      </define>
    </include>
    <include href="abbreviateDomain.rng"/>
    <include href="urn:oasis:names:tc:dita:rng:alternativeTitlesDomain.rng:2.0" dita:since="2.0"/>
