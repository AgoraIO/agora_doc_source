<structure-autocorrect>
  <!-- Unordered lists -->
  <prefix-replacement prefix="-">
    <itemizedlist><listitem><para/></listitem></itemizedlist>
  </prefix-replacement>
  <prefix-replacement prefix="-">
    <itemizedlist><listitem><para/></listitem></itemizedlist>
  </prefix-replacement>
  <prefix-replacement prefix="*">
    <itemizedlist><listitem><para/></listitem></itemizedlist>
  </prefix-replacement>
  <prefix-replacement prefix="+">
    <itemizedlist><listitem><para/></listitem></itemizedlist>
  </prefix-replacement>
  
  <!-- Ordered lists -->
  <prefix-replacement prefix="1.">
    <orderedlist><listitem><para/></listitem></orderedlist>
  </prefix-replacement>
  
  <!-- Code block shortcut -->
  <prefix-replacement prefix="```">
    <programlisting/>
  </prefix-replacement>
  <prefix-replacement prefix="```java">
    <programlisting language="java"/>
  </prefix-replacement>
  <prefix-replacement prefix="```js">
    <programlisting language="javascript"/>
  </prefix-replacement>
  <prefix-replacement prefix="```xml">
    <programlisting language="xml"/>
  </prefix-replacement>
  <prefix-replacement prefix="```css">
    <programlisting language="css"/>
  </prefix-replacement>
  <prefix-replacement prefix="```py">
    <programlisting language="python"/>
  </prefix-replacement>
  <prefix-replacement prefix="```bash">
    <programlisting language="bourne"/>
  </prefix-replacement>
  <prefix-replacement prefix="```json">
    <programlisting language="json"/>
  </prefix-replacement>
  
  <!-- Note shortcut -->
  <prefix-replacement prefix="Note:">
    <note><para/></note>
  </prefix-replacement>
  <prefix-replacement prefix="Warning:">
    <warning><para/></warning>
  </prefix-replacement>
  <prefix-replacement prefix="Important:">
    <important><para/></important>
  </prefix-replacement>
</structure-autocorrect>